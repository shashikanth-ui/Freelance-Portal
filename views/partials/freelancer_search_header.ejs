<header class="py-3 mb-3 border-bottom">
<link rel="stylesheet" href="/css/index_styles.css">
  <div class="container-fluid d-grid gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
    
    <!-- Profile Dropdown (Left Corner) -->
    <div class="dropdown">
      <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" 
         data-bs-toggle="dropdown" aria-expanded="false">
        <img src="<%= user.profile_photo || 'https://via.placeholder.com/32' %>" 
             alt="<%= user.name %>" width="32" height="32" class="rounded-circle">
        <span class="ms-2"><%= user.name %></span>
      </a>
      <ul class="dropdown-menu text-small shadow">
        <li><a class="dropdown-item" href="/profile/<%= user.role  %>">Profile</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/logout">Sign out</a></li>
      </ul>
    </div>

    <!-- Search + Right Corner Signout -->
    <div class="d-flex align-items-center justify-content-end">
      <form class="w-100 me-3" role="search" method="get" action="/freelancer_home">
        <input type="search" name="q" class="form-control" placeholder="Search..." aria-label="Search" value="<%= query %>">
      </form>
      <a href="/logout" class="btn btn-outline-danger">Sign out</a>
    </div>

  </div>

  <!-- In <head> -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</header>
